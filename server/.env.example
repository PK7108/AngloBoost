# Application
PORT=4000
APP_URL=https://angloboost.pl

# CORS
# Możesz podać wiele domen, rozdzielając przecinkami (np. prod + lokalnie)
CORS_ORIGIN=https://angloboost.pl,https://www.angloboost.pl,http://localhost:5173

# JWT
JWT_SECRET=change_me_super_secret
JWT_EXPIRES=7d

# SMTP - option 1: provide your SMTP (recommended for production)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=your_user
# SMTP_PASS=your_pass
# FROM_EMAIL="AngloBoost <no-reply@yourdomain.com>"

# SMTP - option 2: set to true to use Ethereal test account (for local dev)
USE_ETHEREAL=true

# Newsletter settings - próba z SMTP bez from email
#NEWSLETTER_FROM_EMAIL=noreply@angloboost.com
#NEWSLETTER_FROM_NAME=AngloBoost
#
## Email settings (jeśli używasz prawnego SMTP)
#SMTP_HOST=your-smtp-host.com
#SMTP_PORT=587
#SMTP_USER=your-email@domain.com
#SMTP_PASS=your-password
#
## Lub użyj Ethereal do testów
#USE_ETHEREAL=true